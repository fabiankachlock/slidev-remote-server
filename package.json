{
  "name": "slidev-remote-server",
  "version": "1.0.0",
  "description": "Easily present you slidev slides remotly!",
  "main": "index.js",
  "repository": "github.com/fabiankachlock/slidev-remote-server",
  "author": "Fabin Kachlock",
  "license": "MIT",
  "private": false,
  "scripts": {
    "// Server": "",
    "run:server": "ts-node --files --project tsconfig.server.json src",
    "build:server": "tsc -p tsconfig.server.json",
    "watch:server": "nodemon --watch src/server --exec 'yarn run:server' -e ts",
    "// Frontend": "",
    "build:vue": "vue-tsc --noEmit && vite build --emptyOutDir",
    "serve:vue": "vite preview",
    "watch:vue": "vite",
    "// Composition": "",
    "dev": "vite & nodemon --watch src/server --exec 'yarn run:server' -e ts",
    "build": "yarn build:vue && yarn build:server",
    "prod": "NODE_ENV=production node dist/server/index.js",
    "// Misc": "",
    "format": "prettier --write 'src/**/*.ts' 'web/**/*.{ts,vue,html,css,d.ts}'",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,html,css,d.ts,vue}": "yarn format"
  },
  "devDependencies": {
    "@iconify/json": "^1.1.384",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/fs-extra": "^9.0.12",
    "@types/multer": "^1.4.7",
    "@types/node-schedule": "^1.3.2",
    "@types/uuid": "^8.3.1",
    "@types/vue": "^2.0.0",
    "@types/vue-router": "^2.0.0",
    "@vitejs/plugin-vue": "^1.3.0",
    "@vue/compiler-sfc": "^3.1.5",
    "autoprefixer": "^10.3.1",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "nodemon": "^2.0.12",
    "postcss": "^8.3.6",
    "prettier": "^2.3.2",
    "tailwindcss": "^2.2.7",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "vite": "^2.4.4",
    "vite-plugin-components": "^0.13.2",
    "vite-plugin-icons": "^0.6.5",
    "vue-tsc": "^0.2.2"
  },
  "dependencies": {
    "@types/node-fetch": "^2.5.12",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "fs-extra": "^10.0.0",
    "http-proxy-middleware": "^2.0.1",
    "multer": "^1.4.2",
    "node-fetch": "^2.6.1",
    "node-schedule": "^2.0.0",
    "uuid": "^8.3.2",
    "vue": "^3.0.5",
    "vue-router": "^4.0.10",
    "vuex": "^4.0.2"
  }
}
