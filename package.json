{
  "name": "slidev-remote-server",
  "version": "1.0.0",
  "description": "Easily present you slidev slides remotly!",
  "main": "index.js",
  "repository": "github.com/fabiankachlock/slidev-remote-server",
  "author": "Fabin Kachlock",
  "license": "MIT",
  "private": false,
  "scripts": {
    "// Server":"",
    "run:server": "ts-node --project tsconfig.server.json src",
    "build:server": "tsc -p tsconfig.server.json",
    "// Frontend":"",
    "build:vue": "vue-tsc --noEmit && vite build --emptyOutDir",
    "serve:vue": "vite preview",
    "// Composition": "",
    "dev": "vite & nodemon --watch src/server --exec 'yarn run:server' -e ts",
    "build": "yarn build:vue && yarn build:server",
    "prod": "NODE_ENV=production node dist/server/index.js",
    "// Misc": "",
    "format": "prettier --write 'src/**/*.ts'",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,html,css,d.ts,vue}": "yarn format"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.12",
    "@types/multer": "^1.4.7",
    "@types/uuid": "^8.3.1",
    "@types/vue": "^2.0.0",
    "@types/vue-router": "^2.0.0",
    "@vitejs/plugin-vue": "^1.3.0",
    "@vue/compiler-sfc": "^3.1.5",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.1",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "vite": "^2.4.4",
    "vue-tsc": "^0.2.2"
  },
  "dependencies": {
    "express": "^4.17.1",
    "fs-extra": "^10.0.0",
    "http-proxy-middleware": "^2.0.1",
    "multer": "^1.4.2",
    "uuid": "^8.3.2",
    "vue": "^3.0.5",
    "vue-router": "^3.5.2",
    "vuex": "^3.6.2"
  }
}
